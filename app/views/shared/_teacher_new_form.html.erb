        <form action="/create_classroom_teacher" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for name -->
          <div class="form-group">

            <label for="name" class="col-sm-2 control-label">
              Name
            </label>
            <div class="col-sm-10">

              <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @teacher.name %>">

            </div>

          </div>

          <!-- Label and input for school_id -->
          <div class="form-group">

            <label for="school_id" class="col-sm-2 control-label">
              School
            </label>
            <div class="col-sm-10">

              <%= select_tag(:school_id, options_from_collection_for_select(School.all, :id, :name, @classroom.school_id), :class => "form-control", :disabled => "disabled") %>

              <%= hidden_field_tag 'school_id', @classroom.school_id %>

            </div>

          </div>

          <!-- Label and input for classroom_id -->
          <div class="form-group">

            <label for="classroom_id" class="col-sm-2 control-label">
              Classroom
            </label>
            <div class="col-sm-10">

              <%= select_tag(:classroom_id, options_from_collection_for_select(Classroom.all, :id, :name, @classroom.id), :class => "form-control", :disabled => "disabled") %>

              <%= hidden_field_tag 'classroom_id', @classroom.id %>

            </div>

          </div>

          <!-- Label and input for advocate_id -->
          <div class="form-group">

            <label for="advocate_id" class="col-sm-2 control-label">
              Advocate
            </label>
            <div class="col-sm-10">

              <%= select_tag(:advocate_id, options_from_collection_for_select(Advocate.all, :id, :name, @teacher.advocate_id), :class => "form-control") %>

            </div>

          </div>


          <!-- Label and input for gender -->
          <div class="form-group">

            <label for="gender" class="col-sm-2 control-label">
              Gender
            </label>
            <div class="col-sm-10">

              <%= select_tag(:gender, options_for_select([ "Male", "Female" ], @teacher.gender), :class => "form-control") %>

            </div>

          </div>


          <!-- Label and input for dob -->
          <div class="form-group">

            <label for="dob" class="col-sm-2 control-label">
              Dob
            </label>
            <div class="col-sm-10">

              <input type="date" id="dob" name="dob" placeholder="Dob" class="form-control" value="<%= @teacher.dob %>">


            </div>

          </div>


          <!-- Label and input for education_level -->
          <div class="form-group">

            <label for="education_level" class="col-sm-2 control-label">
              Education level
            </label>
            <div class="col-sm-10">

              <input type="text" id="education_level" name="education_level" placeholder="Education level" class="form-control" value="<%= @teacher.education_level %>">

            </div>

          </div>


          <!-- Label and input for teacher_enrollment_id -->
          <div class="form-group">

            <label for="teacher_enrollment_id" class="col-sm-2 control-label">
              Teacher enrollment
            </label>
            <div class="col-sm-10">

              <input type="text" id="teacher_enrollment_id" name="teacher_enrollment_id" placeholder="Teacher enrollment" class="form-control" value="<%= @teacher.teacher_enrollment_id %>">

            </div>

          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Teacher
              </button>
              or
              <a href="/teachers">Cancel</a>
            </div>
          </div>

        </form>
