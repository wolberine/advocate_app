<!-- Validation failure messages -->

<% if @student_enrollment.errors.any? %>
  <% @student_enrollment.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Student Enrollment</h3>
      </div>
      <div class="panel-body">

        <form action="/create_student_enrollment" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">



          <!-- Label and input for teacher_id -->
          <div class="form-group">

            <label for="teacher_id" class="col-sm-2 control-label">
              Teacher
            </label>
            <div class="col-sm-10">

              <%= select_tag(:teacher_id, options_from_collection_for_select(Teacher.all, :id, :name, @student_enrollment.teacher_id), :class => "form-control") %>

            </div>

          </div>


          <!-- Label and input for student_id -->
          <div class="form-group">

            <label for="student_id" class="col-sm-2 control-label">
              Student
            </label>
            <div class="col-sm-10">

              <%= select_tag(:student_id, options_from_collection_for_select(Student.all, :id, :name, @student_enrollment.student_id), :class => "form-control") %>

            </div>

          </div>


          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Student Enrollment
              </button>
              or
              <a href="/student_enrollments">Cancel</a>
            </div>
          </div>

        </form>

      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
