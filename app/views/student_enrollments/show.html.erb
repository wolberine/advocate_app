<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Student Enrollment #<%= @student_enrollment.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">

              <dt>Teacher</dt>
              <dd><%= @student_enrollment.teacher.name %></dd>


              <dt>Student</dt>
              <dd><%= @student_enrollment.student.name %></dd>


            </dl>
            <div class="btn-group btn-group-justified">

              <a href="/student_enrollments" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/student_enrollments/<%= @student_enrollment.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_student_enrollment/<%= @student_enrollment.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
