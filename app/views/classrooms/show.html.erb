<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Classroom #<%= @classroom.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">

              <dt>School</dt>
              <dd><%= @classroom.school.name %></dd>


              <dt>Name</dt>
              <dd><%= @classroom.name %></dd>


              <dt>Description</dt>
              <dd><%= @classroom.description %></dd>


            </dl>
            <div class="btn-group btn-group-justified">

              <a href="/classrooms" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/classrooms/<%= @classroom.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_classroom/<%= @classroom.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>

            </div>
          </div>
        </div>
      </div>

      <div class="list-group col-md-6">
        <h1>Students</h1>
        <% @classroom.students.each do |student_enrollment| %>
        <li class="list-group-item">
          <h4 class="list-group-item-heading"><%= student_enrollment.name %></h4>
        </li>
        <% end %>
      </div>

      <div class="list-group col-md-6">
        <h1>Teachers</h1>
        <% @classroom.teachers.each do |teacher_enrollment| %>
        <li class="list-group-item">
          <h4 class="list-group-item-heading"><%= teacher_enrollment.name %></h4>
        </li>
        <% end %>
      </div>

    </div>
  </div>
</div>

<!-- End responsive panel example -->
