<!-- Validation failure messages -->

<% if @school.errors.any? %>
  <% @school.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit School #<%= @school.id %></h3>
      </div>
      <div class="panel-body">

        <form action="/update_school/<%= @school.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">



          <!-- Label and input for advocate_id -->
          <div class="form-group">

            <label for="advocate_id" class="col-sm-2 control-label">
              Advocate
            </label>
            <div class="col-sm-10">

              <%= select_tag(:advocate_id, options_from_collection_for_select(Advocate.all, :id, :name, @school.advocate_id), :class => "form-control") %>

            </div>

          </div>

          <!-- Label and input for advocate_id -->
          <div class="form-group">

            <label for="network_id" class="col-sm-2 control-label">
              Network
            </label>
            <div class="col-sm-10">

              <%= select_tag(:network_id, options_from_collection_for_select(Network.all, :id, :name, @school.network_id), :class => "form-control") %>

            </div>

          </div>


          <!-- Label and input for longitude -->
          <div class="form-group">

            <label for="longitude" class="col-sm-2 control-label">
              Longitude
            </label>
            <div class="col-sm-10">

              <input type="text" id="longitude" name="longitude" placeholder="Longitude" class="form-control" value="<%= @school.longitude %>">

            </div>

          </div>


          <!-- Label and input for latitude -->
          <div class="form-group">

            <label for="latitude" class="col-sm-2 control-label">
              Latitude
            </label>
            <div class="col-sm-10">

              <input type="text" id="latitude" name="latitude" placeholder="Latitude" class="form-control" value="<%= @school.latitude %>">

            </div>

          </div>


          <!-- Label and input for location -->
          <div class="form-group">

            <label for="location" class="col-sm-2 control-label">
              Location
            </label>
            <div class="col-sm-10">

              <input type="text" id="location" name="location" placeholder="Location" class="form-control" value="<%= @school.location %>">

            </div>

          </div>


          <!-- Label and input for name -->
          <div class="form-group">

            <label for="name" class="col-sm-2 control-label">
              Name
            </label>
            <div class="col-sm-10">

              <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @school.name %>">

            </div>

          </div>


          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update School
              </button>
              or

              <a href="/schools/<%= @school.id %>">Cancel</a>

            </div>
          </div>

        </form>

      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
